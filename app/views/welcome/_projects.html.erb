<div class="section_part" id="projects_section">
  <h2 class="projects_h2" align="center">Projects</h2>
  <div class="projects_container">
    <% for project in @projects %>
      <%= link_to projects_dialog_path(project.tag) do %>
        <div class="project_container" align="left">
          <div
            class="<%= justified_body project %> project_body">
            <%= project.body %>
          </div>
          <%= link_to "Edit", edit_post_by_tag_path(project.tag) if admin? %>
        </div>
      <% end %>
    <% end %>
    
    <% if admin? %>
      </br>
      <p align="center">
        <%= link_to "Add a project",
          edit_post_by_tag_path(tag: "#{'project_' + (Post.where(section: :projects).size + 1).to_s}", section: :projects) %>
      </p>
    <% end %>
  </div>
</div>
