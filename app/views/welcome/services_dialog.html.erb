<div class="dialog_modal" id="dialog_modal" align="center">
  <div class="service_dialog" align="center">
    <%= link_to '<i class="fa fa-times fa-2x"></i>'.html_safe, close_path, remote: true, class: "top_right_link white_link" %>
    <% case @service %>
      <% when "1" %>
        <style>
          .dialog_modal {
            background-image: url("<%= post_img("services_img_1") %>");
            background-repeat: no-repeat;
            background-size: cover;
          }
        </style>
        <h2 class="service_dialog_header" align="center">Construction Surveying</h2>
        <% ["Heavy Civil", "Highways", "Bridges", "Commercial Sites", "Utilities Layout & Asbuilt"].each do |service| %>
          <div class="service_dialog_txt">
            <%= service %>
          </div>
        <% end %>
        <div>
          <%= link_to "Edit background", edit_post_by_tag_path("services_img_1"), class: :white_link if admin? %>
        </div>
      <% when "2" %>
        <style>
          .dialog_modal {
            background-image: url("<%= post_img("services_img_2") %>");
            background-repeat: no-repeat;
            background-size: cover;
          }
        </style>
        <h2 class="service_dialog_header" align="center">Traditional Land Surveying</h2>
        <% ["Boundary", "Topographic", "ALTA/NSPS", "Location Surveys", "Geodetic & Site Survey Control",
          "Right-of-way, Easements & Utility Corridors", "Residential Subdivisions", "GIS Data Acquisition",
          "Commercial Developments", "Industrial & Airports", "Medical & Education Facilities",
          "Municipal, County, Sate & Federal"].each do |service| %>
          <div class="service_dialog_txt">
            <%= service %>
          </div>
        <% end %>
        <div>
          <%= link_to "Edit background", edit_post_by_tag_path("services_img_2"), class: :white_link if admin? %>
        </div>
      <% when "3" %>
        <style>
          .dialog_modal {
            background-image: url("<%= post_img("services_img_3") %>");
            background-repeat: no-repeat;
            background-size: cover;
          }
        </style>
        <h2 class="service_dialog_header" align="center">3D-Laser Scanning</h2>
        <% ["Topographic", "Aerial Imaging", "Structure Surveys & Inspections",
          "Earthwork, landfill, stock pile volume quantities", "Highways & Bridges", "Solar Farms", "Infrared Imaging",
          "Forensic & Accident Sites", "Agriculture Studies"].each do |service| %>
          <div class="service_dialog_txt">
            <%= service %>
          </div>
        <% end %>
        <div>
          <%= link_to "Edit background", edit_post_by_tag_path("services_img_3"), class: :white_link if admin? %>
        </div>
      <% when "4" %>
        <style>
          .dialog_modal {
            background-image: url("<%= post_img("services_img_4") %>");
            background-repeat: no-repeat;
            background-size: cover;
          }
        </style>
        <h2 class="service_dialog_header" align="center">3D Modeling</h2>
        <% ["Machine Control DTM (Digital Terrain Model) Files", "Cut/Fill Maps", "Highways",
          "Commercial Sites"].each do |service| %>
          <div class="service_dialog_txt">
            <%= service %>
          </div>
        <% end %>
        <div>
          <%= link_to "Edit background", edit_post_by_tag_path("services_img_4"), class: :white_link if admin? %>
        </div>
    <% end %>
  </div>
</div>
