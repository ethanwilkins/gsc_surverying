window.onload = window.onresize = function () {
  // gets screen height of current device
  var screen_height = window.innerHeight - 60;
  screen_height = screen_height.toString() + "px";
  // resizes all section divs
  if (window.innerWidth > 975) {
    $(".section_part").each(function(i, obj){
      obj.style.height = screen_height;
    });
    // resizes image carousel
    $(".carousel_outer").css("height", screen_height);
    $(".carousel_image").css("height", screen_height);
  }
}
